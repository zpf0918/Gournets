<div class="col-md-12 job-content">
  <h3> Send your resume to  <%= @job.title %></h3>

  <hr>
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for [@job,@resume] do |f| %>
      <div class="form-group">
        <%= f.input :content, input_html: { class: "form-control"} %>
        <%= f.input :attachment%>
      </div>
      <div class="form-actions text-center">
        <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary btn1"%>
      </div>
    <% end %>
  </div>
</div>
