<h1> <%= @job.title %> </h1>

<p>
  <%= simple_format(@job.description) %>

</p>
<div class="text-center">
  <% if current_user && current_user.has_applied?(@job) %>
    <%= link_to("您已投递，不可重复投递", new_job_resume_path(@job), class: "btn btn-danger btn-sm
                 disabled", method: :get) %>
<% else %>
    <%= link_to("投递简历", new_job_resume_path(@job), class: "btn btn-info btn-sm",
                 method: :get) %>
 <% end %>
</div>
