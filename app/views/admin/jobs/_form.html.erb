<div class="col-md-8">
  <%= simple_form_for [:admin,@job] do |f| %>
  <div class="form-group">
    <%= f.input :title, placeholder: 'job title'%>
    <%= f.input :description %>
    <%= f.input :wage_lower_bound, :label => 'wage_bound' do %>
    <%= f.input_field :wage_lower_bound, :as => :string %>
    K ~
    <%= f.input_field :wage_upper_bound, :as => :string %>
    K
    <% end %>

    <%= f.input :company %>
    <% if @job.city? %>
    <%= f.input :city, :collection => ["Beijing", "Shanghai", "Shenzhen", "Guangzhou"] , :checked => @job.city %>
    <% else %>
    <%= f.input :city, :collection => ["Beijing", "Shanghai", "Shenzhen", "Guangzhou"] %>
    <% end %>
    <% if @job.category? %>
    <%= f.input :category, :collection => ["steak", "wine taster", "pastry cook", "tea art"], :checked => @job.category %>
    <% else %>
    <%= f.input :category, :collection => ["steak", "wine taster", "pastry cook", "tea art"] %>
    <% end %>
    <%= f.input :contact_email %>
    <%= f.input :is_hidden %>
  </div>
  <%= f.submit "submit", disable_with:"submiting",:class => "btn btn-xs btn-info"%>
  <% end %>
</div>
