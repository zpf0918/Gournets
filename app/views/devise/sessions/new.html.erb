<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :label => false, required: false, placeholder: 'email', required: false, autofocus: true %>
    <%= f.input :password, :label => false, placeholder:'password', required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= link_to "forget your password?", new_password_path(resource_name), class: 'psw'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "button"%>
  </div>
<% end %>
<hr />
  <div class="account">
    <%= link_to "Register", new_registration_path(resource_name) %>
  </div>
 </div>
 </div>
</div>
